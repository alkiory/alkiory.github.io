---
import "../styles/global.css";
import Icon from "../components/ui/icon.astro";
import { getTranslations } from "../data/i18n";

const lang = (Astro.url.pathname.split("/")[1] as "es" | "en") || "en";
const t = getTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer
  class="flex flex-col gap-12 mt-auto py-6 px-8 text-center text-sm text-gray-500 dark:text-gray-400 bg-white dark:bg-slate-950 border-t border-gray-200 dark:border-gray-800"
>
  <div
    class="flex flex-col md:flex-row md:justify-between md:items-center w-full max-w-7xl mx-auto"
  >
    <div
      class="group flex flex-col md:flex-row gap-2 md:gap-4 items-center justify-center md:justify-start"
    >
      <p class="flex items-center gap-1">
        {t?.footer.sign}
        <a
          href="https://astro.build/"
          class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors underline underline-offset-2 decoration-transparent hover:decoration-current"
        >
          Astro
        </a>
        <Icon icon="rocket-launch" size="1.2em" />
      </p>
      <p class="text-gray-500 dark:text-gray-400">
        &copy; {currentYear}
      </p>
    </div>

    <div class="socials flex justify-center md:justify-end gap-4 flex-wrap">
      <a
        href="https://twitter.com/alkiory"
        class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors underline underline-offset-2 decoration-transparent hover:decoration-current"
      >
        Twitter
      </a>
      <a
        href="https://github.com/alkiory"
        class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors underline underline-offset-2 decoration-transparent hover:decoration-current"
      >
        GitHub
      </a>
      <a
        href="https://www.linkedin.com/in/iamsergiocampbell"
        class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 transition-colors underline underline-offset-2 decoration-transparent hover:decoration-current"
      >
        Linkedin
      </a>
    </div>
  </div>
</footer>
